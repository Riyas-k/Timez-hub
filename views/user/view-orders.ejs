<script>
  function cancelOrder(proId){
      $.ajax({
          url:'/cancel-order/'+proId,
          method:'get',
          success:(response=>{
              if(response.status){
                  location.reload()
              }
          })
      })
  }
  function deleteOrder(proId){
      $.ajax({
          url:"/deleteOrder/"+proId,
          method:'delete',
          success:(response=>{
            if(response.status){
              location.reload()
            }
          })
      })
  }
</script>
