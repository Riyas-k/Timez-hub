<script>
 $('#checkout-form').submit((e)=>{
     e.preventDefault()
    
     $.ajax({
         url:'/placeOrder',
         data:$('#checkout-form').serialize(),
         method:'post',
         success:(response)=>{
            if(response.codStatus){
             location.href='/success'
            }
         }
         
     })
})
function deleteAddress(addId){
  event.preventDefault()
  $.ajax({
    url:'/delete-address/'+addId,
    method:'delete',
    success:(response)=>{
      if(response.status){
        location.reload()
      }
    }
  })
}

</script> --> 

